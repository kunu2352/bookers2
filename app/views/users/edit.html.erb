<h2>プロフィール編集</h2>
<div id="error_explanation">
    <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
     <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <% end %>
<%= form_with model: @user do |f| %>
<label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前" %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <label for="inputintroduction">introduction</label>
  <%= f.text_field :introduction, placeholder: "紹介文" %>
  <%= f.submit "Update User" %>
<% end %>