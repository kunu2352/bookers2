<div class="container px-5 px-sm-0">
  <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">  
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user_id) do %>
              <%= image_tag @books.user.get_profile_image(100,100) %>
              <br><%= @user.name %>
              <% end %>
            </td>
            <td>
            <%= link_to book_path(@books.id) do %>
            <%= @books.title %>
            <% end %>
            </td>
            <td><%= @books.body %></td>
            <% if @books.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>  
          </tr>
        
          
        </tbody>  
      </table>
    </div>
  </div>
</div>